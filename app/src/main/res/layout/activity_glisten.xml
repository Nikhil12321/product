<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.nikhil.product.Glisten"
    android:background="@color/girish_crappy_gray"
    android:id="@+id/container"
    android:orientation="vertical">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/glisten_list_view"
        android:dividerHeight="15dp"
        android:padding="@dimen/activity_horizontal_margin"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="false"
        ></ListView>


    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expanded_image"
        android:visibility="invisible"
        android:paddingLeft="@dimen/image_view_padding"
        android:paddingRight="@dimen/image_view_padding"
        style="@style/myImageView"
        />



</LinearLayout>
