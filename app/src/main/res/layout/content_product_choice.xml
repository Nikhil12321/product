<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nikhil.product.Product_choice"
    tools:showIn="@layout/activity_product_choice">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/card_divider_height"
        >


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                card_view:cardCornerRadius="@dimen/card_corner_radius"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                card_view:cardBackgroundColor="#0097A7"
                card_view:cardElevation="@dimen/card_elevation"
                android:padding="@dimen/card_padding"
                android:onClick="glisten_click"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Glisten"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
                </android.support.v7.widget.CardView>

            <View

                android:layout_width="match_parent"
                android:layout_height="@dimen/card_divider_height"
                />


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"

                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/card_height"
                card_view:cardCornerRadius="@dimen/card_corner_radius"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                card_view:cardBackgroundColor="#EF5350"
                card_view:cardElevation="@dimen/card_elevation"
                android:padding="@dimen/card_padding"
                android:onClick="glam_click"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Glam"
                    android:textSize="20sp"
                    android:textColor="@android:color/white"/>
            </android.support.v7.widget.CardView>


        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/card_divider_height"
            />


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_elevation"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/card_padding"
            android:onClick="vox_click"
            card_view:cardBackgroundColor="#455A64"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VOX"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
        </android.support.v7.widget.CardView>

        <View

            android:layout_width="match_parent"
            android:layout_height="@dimen/card_divider_height"
            />


        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_height"
            card_view:cardCornerRadius="@dimen/card_corner_radius"
            card_view:cardElevation="@dimen/card_elevation"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            card_view:cardBackgroundColor= "#009688"
            android:padding="@dimen/card_padding"
            android:onClick="vox_saga_click"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="VOX Saga"
                android:textSize="20sp"
                android:textColor="@android:color/white"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
